<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width = "match_parent"
    android:layout_height = "match_parent" android:paddingLeft = "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".ui.InitialActivity">
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textAppearance = "?android:attr/textAppearanceMedium"
        android:text = "@string/base_url"
        android:id = "@+id/textView"
        android:layout_marginTop = "35dp"
        android:minWidth = "400dp"
        android:layout_alignParentTop = "true"
        android:layout_alignStart = "@+id/urlText"/>

    <EditText
        android:id="@+id/urlText"
        style="@style/EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:enabled="false"
        android:lines="1"
        android:maxLines="1"
        android:minWidth="400dp"
        android:text="@string/localhost"
        android:hint="@string/base_url"
        android:inputType="textUri"/>
    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal = "true"
        android:weightSum = "2"
        android:id = "@+id/linearLayout4">
    </LinearLayout>
    <Button
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "@string/connect"
        android:id = "@+id/connectButton"
        android:layout_alignBottom = "@+id/linearLayout4"
        android:layout_centerHorizontal = "true"
        android:enabled = "false"
        android:onClick = "testConnection"/>
</RelativeLayout>