<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id = "@+id/activity_photos"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:paddingLeft = "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    tools:context = "cis573.com.archaeology.ui.PhotosActivity">
    <Button
        android:text = "@string/view_photos"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/image_button"
        android:onClick = "viewPhotos"
        android:layout_toEndOf = "@+id/extract_color"
        android:layout_alignParentBottom = "true"/>
    <ImageView
        android:layout_width = "fill_parent"
        android:layout_height = "fill_parent"
        app:srcCompat = "@android:drawable/alert_dark_frame"
        android:id = "@+id/imageView"
        android:adjustViewBounds = "true"
        android:scaleType = "matrix"
        android:layout_centerInParent = "true"
        android:scrollX = "@dimen/activity_horizontal_margin"
        android:scrollY = "@dimen/activity_vertical_margin"/>
    <Button
        android:text = "@string/color_correct"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignBottom = "@+id/image_button"
        android:layout_alignParentStart = "true"
        android:layout_marginStart = "14dp"
        android:id = "@+id/extract_color"
        android:onClick = "colorCorrect"/>
</RelativeLayout>