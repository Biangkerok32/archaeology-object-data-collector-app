<?xml version = "1.0" encoding = "utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent">
    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_height = "0dp"
            android:layout_width = "match_parent"
            android:layout_weight = "1">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0000_topleft"
                android:id = "@+id/imageView6"
                android:layout_weight = "5"
                android:scaleType = "fitXY"
                android:contentDescription="@string/artifact_image"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0001_top"
                android:id = "@+id/imageView7"
                android:layout_weight = "40"
                android:scaleType = "fitXY"
                android:contentDescription="@string/bookmarks"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0002_topright"
                android:id = "@+id/imageView8"
                android:layout_weight = "3"
                android:scaleType = "fitXY"
                android:contentDescription="@string/bookmarks"/>
        </LinearLayout>
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "4.5">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0003_midleft"
                android:id = "@+id/imageView"
                android:layout_weight = "5"
                android:scaleType = "fitXY"
                android:contentDescription="@string/artifact_image"/>
            <ListView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:id = "@+id/listView"
                android:layout_weight = "40"
                android:background = "#FFFFFF"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0005_midright"
                android:id = "@+id/imageView2"
                android:layout_weight = "3"
                android:scaleType = "fitXY"
                android:contentDescription="@string/bookmarks"/>
        </LinearLayout>
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0006_downleft"
                android:id = "@+id/imageView3"
                android:layout_weight = "5"
                android:scaleType = "fitXY"
                android:contentDescription="@string/bookmarks"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0007_down"
                android:id = "@+id/imageView4"
                android:layout_weight = "40"
                android:scaleType = "fitXY"
                android:contentDescription="@string/bookmarks"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/bookmarks_0008_downright"
                android:id = "@+id/imageView5"
                android:layout_weight = "3"
                android:scaleType = "fitXY"
                android:contentDescription="@string/bookmarks"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:backgroundTint = "@android:color/transparent"
                android:id = "@+id/imageView10"
                android:layout_weight = "5"
                android:contentDescription="@string/bookmarks"/>
            <TextView
                android:text = "@string/bookmarks"
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:id = "@+id/textView2"
                android:layout_weight = "40"
                android:textColor = "#971c20"
                android:textStyle = "normal|bold"
                android:textAlignment = "gravity"
                android:gravity = "end|center_vertical"
                android:textSize = "30sp"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:backgroundTint = "@android:color/transparent"
                android:id = "@+id/imageView11"
                android:layout_weight = "3"
                android:contentDescription="@string/bookmarks"/>
        </LinearLayout>
        <ImageView
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:backgroundTint = "@android:color/transparent"
            android:id = "@+id/imageView9"
            android:layout_weight = "5.5"
            android:contentDescription="@string/artifact_image"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>