<?xml version = "1.0" encoding = "utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/lib/cis573.com.archaeology"
    xmlns:app2 = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent">
    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_height = "0dp"
            android:layout_width = "match_parent"
            android:layout_weight = "1">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0002_topright"
                android:id = "@+id/imageView8"
                android:layout_weight = "3"
                android:scaleType = "fitXY"
                android:contentDescription="@string/history"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0001_top"
                android:id = "@+id/imageView7"
                android:layout_weight = "40"
                android:scaleType ="fitXY"
                android:contentDescription="@string/history"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0000_topleft"
                android:id = "@+id/imageView6"
                android:layout_weight = "5"
                android:scaleType = "fitXY"
                android:contentDescription="@string/history"/>
        </LinearLayout>
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "4.5">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0005_midright"
                android:id = "@+id/imageView2"
                android:layout_weight = "3"
                android:scaleType = "fitXY"
                android:contentDescription="@string/history"/>
            <ListView
                android:layout_width = "0dp"
                android:id = "@+id/listView"
                android:layout_height = "match_parent"
                android:layout_weight = "40"
                android:background = "#FFFFFF"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0003_midleft"
                android:id = "@+id/imageView"
                android:layout_weight = "5"
                android:scaleType = "fitXY"
                android:contentDescription="@string/history"/>
        </LinearLayout>
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0008_downright"
                android:id = "@+id/imageView5"
                android:layout_weight = "3"
                android:scaleType = "fitXY"
                android:contentDescription="@string/history"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0007_down"
                android:id = "@+id/imageView4"
                android:layout_weight = "40"
                android:scaleType = "fitXY"
                android:contentDescription="@string/history"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:src = "@drawable/history_0006_downleft"
                android:id = "@+id/imageView3"
                android:layout_weight = "5"
                android:scaleType = "fitXY"
                android:contentDescription="@string/history"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">
        <LinearLayout
            android:orientation = "horizontal"
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1">
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:backgroundTint = "@android:color/transparent"
                android:id = "@+id/imageView10"
                android:layout_weight = "3"
                android:contentDescription="@string/history"/>
            <TextView
                android:text = "@string/history"
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:id = "@+id/textView2"
                android:layout_weight = "40"
                android:textColor = "#971c20"
                android:textStyle = "normal|bold"
                android:textAlignment = "gravity"
                android:gravity = "center_vertical"
                android:textSize = "26sp"/>
            <ImageView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:backgroundTint = "@android:color/transparent"
                android:id = "@+id/imageView11"
                android:layout_weight = "5"
                android:contentDescription="@string/history"/>
        </LinearLayout>
        <ImageView
            android:layout_width = "match_parent"
            android:layout_height = "0dp"
            android:backgroundTint = "@android:color/transparent"
            android:id = "@+id/imageView9"
            android:layout_weight = "5.5"
            android:contentDescription="@string/history"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:src = "@drawable/delete"
        app:fabSize = "normal"
        android:backgroundTint = "@color/colorPrimaryDark"
        android:id = "@+id/fab"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:onClick = "clearHistory"
        android:layout_marginTop = "5dp"
        app2:elevation = "0dp"
        android:layout_gravity = "top|end"
        android:layout_marginEnd = "15dp"/>
</android.support.design.widget.CoordinatorLayout>