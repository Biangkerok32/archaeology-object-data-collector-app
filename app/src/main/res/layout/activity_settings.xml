<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.archaeology.ui.SettingsActivity">
    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_above = "@+id/linearLayout3">
        <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/settingsWebServiceUrl"
                android:minWidth="400dp"
                android:text="@string/base_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />
            <EditText
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/settingsWebServiceUrl"
                android:inputType="textUri"
                android:layout_below = "@+id/textView5"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:maxLines = "3"
                android:lines = "1"
                android:hint = "@string/base_url"
                android:textAppearance = "?android:attr/textAppearanceMedium"/>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsWebServiceUrl"
                android:layout_alignStart="@+id/settingsBucketUrl"
                android:minWidth="400dp"
                android:text="@string/bucket_url"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/settingsBucketUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:hint="@string/default_bucket_url"
                android:inputType="textUri"
                android:lines="1"
                android:maxLines="3"
                android:minWidth="400dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cameraSelectBox"
                android:layout_centerHorizontal="true"
                android:minWidth="400dp"
                android:text="@string/camera_IP"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />
            <EditText
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/settingsCameraIP"
                android:layout_below = "@+id/textView6"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:lines = "1"
                android:maxLines = "1"
                android:hint = "@string/camera_IP"
                android:textAppearance = "?android:attr/textAppearanceMedium"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsCameraIP"
                android:layout_centerHorizontal="true"
                android:minWidth="400dp"
                android:text="@string/camera_calibration"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />
            <EditText
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/calibrationInterval"
                android:layout_below = "@+id/textView10"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:textAppearance = "?android:attr/textAppearanceMedium"
                android:hint="@string/camera_calibration"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingsBucketUrl"
                android:layout_centerHorizontal="true"
                android:minWidth="400dp"
                android:text="@string/select_camera"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />
            <Spinner
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/cameraSelectBox"
                android:layout_below = "@+id/textView11"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:entries = "@array/camera_list"/>

            <TextView
                android:id="@+id/paired_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calibrationInterval"
                android:layout_marginTop="10dp"
                android:text="@string/paired"
                android:textColor="@android:color/black"
                android:textSize="12pt" />
            <ListView
                android:layout_width = "match_parent"
                android:layout_height = "225dp"
                android:layout_below = "@+id/paired_label"
                android:id = "@+id/paired_devices_list">
            </ListView>

            <Button
                android:id="@+id/pair_new_device"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/paired_devices_list"
                android:layout_marginTop="16dp"
                android:onClick="onPairDeviceClick"
                android:text="@string/pair_device"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal = "true"
        android:weightSum = "3"
        android:id = "@+id/linearLayout3">
        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/default_settings"
            android:id = "@+id/button7"
            android:onClick = "setDefaultSettings"
            android:layout_weight = "1"/>
        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/save_settings"
            android:id = "@+id/button5"
            android:onClick = "saveSettings"
            android:layout_weight = "1"/>
    </LinearLayout>
</RelativeLayout>