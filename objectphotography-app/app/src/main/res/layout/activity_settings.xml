<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width = "match_parent"
    android:layout_height = "match_parent" android:paddingLeft = "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    tools:context = "objectphotography2.com.object.photography.objectphotography_app.SettingsActivity">
    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_above = "@+id/linearLayout3">
        <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance = "?android:attr/textAppearanceMedium"
                android:text = "@string/baseURL"
                android:id = "@+id/textView5"
                android:minWidth = "400dp"
                android:layout_alignParentTop = "true"
                android:layout_alignStart = "@+id/settingsWebServiceUrl"/>
            <EditText
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/settingsWebServiceUrl"
                android:layout_below = "@+id/textView5"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:maxLines = "1"
                android:lines = "1"
                android:textAppearance = "?android:attr/textAppearanceMedium"/>
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance = "?android:attr/textAppearanceMedium"
                android:text = "@string/cameraIP"
                android:id = "@+id/textView6"
                android:minWidth = "400dp"
                android:layout_centerHorizontal = "true"
                android:layout_below = "@+id/cameraSelectBox"/>
            <EditText
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/settingsCameraIP"
                android:layout_below = "@+id/textView6"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:lines = "1"
                android:maxLines = "1"
                android:textAppearance = "?android:attr/textAppearanceMedium"/>
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance = "?android:attr/textAppearanceMedium"
                android:text = "@string/camera_calibration"
                android:id = "@+id/textView10"
                android:layout_below = "@+id/settingsCameraIP"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"/>
            <EditText
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/calibrationInterval"
                android:layout_below = "@+id/textView10"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:textAppearance = "?android:attr/textAppearanceMedium"/>
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance = "?android:attr/textAppearanceMedium"
                android:text = "@string/select_camera"
                android:id = "@+id/textView11"
                android:layout_below = "@+id/settingsWebServiceUrl"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"/>
            <Spinner
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/cameraSelectBox"
                android:layout_below = "@+id/textView11"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:entries = "@array/camera_list"/>
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:textAppearance = "?android:attr/textAppearanceMedium"
                android:text = "@string/data_type"
                android:id = "@+id/textView17"
                android:layout_below = "@+id/calibrationInterval"
                android:layout_centerHorizontal = "true"
                android:maxWidth = "400dp"
                android:minWidth = "400dp"/>
            <Spinner
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:id = "@+id/data_structure_type_spinner"
                android:layout_below = "@+id/textView17"
                android:layout_centerHorizontal = "true"
                android:minWidth = "400dp"
                android:entries = "@array/data_structure_list"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_centerHorizontal = "true"
        android:weightSum = "3"
        android:id = "@+id/linearLayout3">
        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/cancel"
            android:id = "@+id/button6"
            android:onClick = "cancelSettings"
            android:layout_weight = "1"/>
        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Default Settings"
            android:id = "@+id/button7"
            android:layout_above = "@+id/button6"
            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"
            android:onClick = "setDefaultSettings"
            android:layout_weight = "1"/>
        <Button
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "Save Settings"
            android:id = "@+id/button5"
            android:layout_alignParentBottom = "true"
            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true"
            android:onClick = "saveSettings"
            android:layout_weight = "1"/>
    </LinearLayout>
</RelativeLayout>